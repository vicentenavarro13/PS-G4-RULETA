<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CasinoActivity"
    android:background="@drawable/fondo3"
    >


    <ImageView
        android:id="@+id/ruleta"
        android:layout_width="361dp"
        android:layout_height="284dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/casino" />

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ruleta"
        android:src="@drawable/flecha2" />

    <ImageView
        android:id="@+id/boton"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/botongirar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <EditText
        android:id="@+id/editTextText2apuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-222dp"
        android:layout_marginEnd="119dp"
        android:ems="10"


        />

    <EditText
        android:id="@+id/editTextMontoApuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextText2apuestas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="79dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Monto de apuesta"
        android:textColor="#FFFFFF"
        android:inputType="numberDecimal"

        android:textColorHint="#FFFF"

       />

    <EditText
        android:id="@+id/editTextNumeroApuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMontoApuesta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="23dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="NÃºmero de apuesta"
        android:inputType="number"
        android:textColorHint="#FFFF"
        android:textColor="#FFFFFF"
/>

    <TextView
        android:id="@+id/textViewRestante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-142dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="353dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="10" />

    <TextView
        android:id="@+id/textViewSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="16dp"

        android:text="Saldo: 100"
        android:textColor="#FFFFFF"/>
</RelativeLayout>
